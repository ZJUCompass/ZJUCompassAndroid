<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjucompass.zjucampus3.SettingsActivity">

    <ImageView
        android:id="@+id/settings_icon"
        android:layout_marginTop="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon"/>
    <TextView
        android:id="@+id/settings_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_icon"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="浙大指南 1.0"/>

    <TextView
        android:id="@+id/settings_check_update"
        android:layout_below="@id/settings_name"
        style="@style/settings_list_item"
        android:layout_marginTop="20dp"
        android:text="检查更新"/>
    <TextView
        android:id="@+id/settings_faq"
        android:layout_below="@id/settings_check_update"

        style="@style/settings_list_item"
        android:text="常见问题解答"/>
    <TextView
        android:id="@+id/settings_feedback"
        android:layout_below="@id/settings_faq"
        style="@style/settings_list_item"
        android:text="意见反馈"/>

    <ProgressBar
        android:id="@+id/settings_check_upadte_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />


</RelativeLayout>
